<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- 播放器视图 -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:resize_mode="fit"
        app:use_controller="false"
        app:surface_type="texture_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 封面图 -->
    <ImageView
        android:id="@+id/ivCover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:background="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 进入全屏 -->
    <LinearLayout
        android:id="@+id/btnFullScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="@drawable/ic_transparent"
        android:padding="6dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="120dp"> <!-- 避开底部的文案 -->

        <ImageView
            android:id="@+id/btnFullScreenImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_fullscreen"
            app:tint="@android:color/white"/>

        <TextView
            android:id="@+id/btnFullScreenText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 全屏观看"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivPlayStatus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_videopause"
        android:alpha="0.8"
        android:visibility="gone"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/rightInteractionLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!--头像-->
        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_launcher_foreground"
            android:padding="1dp"
            android:src="@android:drawable/sym_def_app_icon" />

        <!-- 点赞区域 (FrameLayout 80dp 宽，确保爆炸动画不被裁剪) -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal">

            <!-- 爱心图标 (居中 40dp) -->
            <ImageView
                android:id="@+id/ivLike"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_heart_filled"
                app:tint="@android:color/white"/>

            <!-- 爆炸动画 (居中 80dp) -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lav_explosion"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:visibility="gone"
                app:lottie_rawRes="@raw/like_explosion"
                app:lottie_loop="false"
                app:lottie_autoPlay="false" />
        </FrameLayout>

        <!-- 点赞数 (调整 marginTop 抵消 FrameLayout 的多余空白) -->
        <TextView
            android:id="@+id/like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="3.4M"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

        <!--评论-->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_comment_dots"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="2048"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="15dp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

        <!-- 收藏 -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_star_filled"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="1.2M"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="15dp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

        <!-- 转发 -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_share_arrow"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Share"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="25dp"
            android:shadowColor="#80000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"/>

        <!-- 唱片动画 -->
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="25dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">
            <ImageView
                android:id="@+id/ivVinyl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_viny1_record"
                android:background="@android:color/black" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- 底部信息 -->
    <LinearLayout
        android:id="@+id/bottomTextLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@android:color/white"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvAudio"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Original Sound - Music"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>