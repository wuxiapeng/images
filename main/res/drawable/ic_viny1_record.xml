<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="100dp"
    android:height="100dp"
    android:viewportWidth="100"
    android:viewportHeight="100">

    <!-- 1. 唱片主体（黑色黑胶部分） -->
    <!-- 使用径向渐变模拟黑胶表面的光泽纹理 -->
    <path android:pathData="M50,50m-50,0a50,50 0 1,1 100,0a50,50 0 1,1 -100,0">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="50"
                android:centerY="50"
                android:gradientRadius="50"
                android:type="radial">
                <item android:color="#FF212121" android:offset="0.0" />
                <item android:color="#FF111111" android:offset="0.7" />
                <item android:color="#FF000000" android:offset="1.0" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- 2. 唱片纹路装饰环（增加一点浅色反光，模拟沟槽感） -->
    <path
        android:pathData="M50,50m-45,0a45,45 0 1,1 90,0a45,45 0 1,1 -90,0"
        android:strokeWidth="0.5"
        android:strokeColor="#33FFFFFF" />
    <path
        android:pathData="M50,50m-35,0a35,35 0 1,1 70,0a35,35 0 1,1 -70,0"
        android:strokeWidth="0.5"
        android:strokeColor="#1AFFFFFF" />

    <!-- 3. 中间贴纸的黑色底衬 -->
    <path
        android:fillColor="#FF000000"
        android:pathData="M50,50m-20,0a20,20 0 1,1 40,0a20,20 0 1,1 -40,0"/>

    <!-- 4. 红色金属质感贴纸 -->
    <!-- 使用扫描渐变(Sweep Gradient)模拟你在图中看到的金属放射光泽 -->
    <path android:pathData="M50,50m-18,0a18,18 0 1,1 36,0a18,18 0 1,1 -36,0">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="50"
                android:centerY="50"
                android:type="sweep">
                <!-- 深红 -> 亮红 -> 深红 循环，形成金属反光效果 -->
                <item android:color="#FF8E0000" android:offset="0.0" />
                <item android:color="#FFFF5252" android:offset="0.25" />
                <item android:color="#FF8E0000" android:offset="0.5" />
                <item android:color="#FFFF5252" android:offset="0.75" />
                <item android:color="#FF8E0000" android:offset="1.0" />
            </gradient>
        </aapt:attr>
    </path>

    <!-- 5. 中间转轴孔（银色金属感） -->
    <path android:pathData="M50,50m-2,0a2,2 0 1,1 4,0a2,2 0 1,1 -4,0">
        <aapt:attr name="android:fillColor">
            <gradient
                android:centerX="50"
                android:centerY="50"
                android:gradientRadius="2"
                android:type="radial">
                <item android:color="#FFFFFFFF" android:offset="0.0" />
                <item android:color="#FF9E9E9E" android:offset="1.0" />
            </gradient>
        </aapt:attr>
    </path>
</vector>